---
import Project from "./project/project.astro";
import { projects } from "@/config/projects";
import Background from "@/components/ui/background.astro";
import SectionTitle from "@/components/ui/section-title.astro";
---

<section
  id="#projects"
  class:list={[
    "relative flex  flex-col justify-center items-center w-full container mx-auto ",
  ]}
>
  <Background backgroundType="toProject" />
  <SectionTitle>FEATURED PROJECTS</SectionTitle>

  {projects.map((project) => <Project {...project} />)}
</section>
