---
import { CardGlow } from "@/components/ui/card";
---

<section
  class="planet grid grid-cols-12 mx-auto container p-3xl"
>
  <div class="col-span-7">
    <div class="flex flex-col gap-m">
      <h1 class="noise"><slot name="title" /></h1>
      <div class="relative flex flex-col gap-m">
        <slot name="description" />
      </div>
      <div class="w-32 h-16 self-end mr-[28%] mt-4">
        <slot name="signature" />
      </div>
    </div>
  </div>
  <div
    class="relative p-m col-span-5 flex flex-col items-center justify-center gap-xl"
  >
    <!-- <CardGlow /> -->
    <slot name="image" />
    <div class="mt-12"><slot name="stats" /></div>
  </div>
</section>
