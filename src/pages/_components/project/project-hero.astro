---
import Card from "@/components/ui/card.astro";
import type { Project } from "@/types";

const { hero } = Astro.props as Pick<Project, "hero">;
---

<Card
  class="relative row-span-4 sm:row-span-8 col-span-12 sm:col-span-8 flex items-center justify-center p-2"
>
  <video
    autoplay
    loop
    playsinline
    muted
    class="h-full w-full object-fit sm:object-cover aspect-video after:corners after:bg-bgColorCard"
  >
    <source src={hero.src} type="video/webm" />
    <!-- <p>{hero.alt}</p> -->
  </video>
</Card>
