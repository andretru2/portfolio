<section
  class="relative container mx-auto min-h-svh grid place-content-center gap-l justify-center min-w-7xl"
>
  <h6
    class="font-light opacity-80 tracking-widest text-center"
  >
    ANDRES TRUJILLO
  </h6>
  <p
    class="flex font-bold text-6xl font-heading flex-wrap gap-[0.5ch] min-w-[40ch] m-0 text-center resize overflow-hidden items-center justify-center py-4 px-0"
  >
    <span class="swapper-first">Creative </span>
    <span
      id="swapper"
      class="swapper bg-accent/10 text-accent italic rounded-md py-0 px-m"
      >Frontend Dev</span
    >
    <span class="swapper-last">empowering</span>
    <span class="block w-full"> change through design</span>
    <span class="block w-full"> and engineering</span>
  </p>
</section>

<script>
  //   const WORDS = [
  //     "Productivity",
  //     "Efficiency",
  //     "Passion",
  //     "Creativity",
  //   ];

  const WORDS = [
    "Frontend Dev",
    "Architect",
    "Prototyper",
    "Animator",
    "Fullstack Dev",
    "UI/UX Designer",
    "Web Engineer",
    "Illustrator",
    "AI Engineer",
  ];
  let count = 0;
  const SWAPPER = document.querySelector("#swapper");

  const SWAP = () => {
    if (!document.startViewTransition) {
      SWAPPER.innerText =
        WORDS[(count += 1) % WORDS.length];
    } else {
      document.startViewTransition(() => {
        SWAPPER.innerText =
          WORDS[(count += 1) % WORDS.length];
      });
    }
  };

  setInterval(SWAP, 2000);
</script>
