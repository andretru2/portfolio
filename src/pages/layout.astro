---
import BaseHead, {
  type Props as HeadProps,
} from "@/components/base-head.astro";
import SkipLink from "@/components/ui/skip-link.astro";
import Header from "@/components/ui/header.astro";
import Footer from "@/components/ui/footer.astro";

export type Props = HeadProps;

const { ...head } = Astro.props;
---

<!doctype html>
<html lang="en" class="h-full scroll-smooth break-words">
  <head>
    <BaseHead {...head} />
    <script>
      if (localStorage.theme === "dark") {
        document.documentElement.classList.add("dark");
      }
    </script>
  </head>
  <body class="overflow-x-hidden w-screen">
    <SkipLink />
    <Header />
    <main id="main" class="relative z-10 flex flex-col">
      <slot />
    </main>
    <Footer />
    <!-- <ThemeProvider /> -->
  </body>
</html>
