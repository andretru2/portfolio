---
// import { Icon } from "astro-icon"

import type { SocialLink } from "@/types";

import { Icon } from "astro-icon/components";

export type Props = {
  links: SocialLink[];
  class?: string;
};

const { links, class: className } = Astro.props;
---

<div class:list={["flex items-center ", className]}>
  {
    links.map((link) => (
      <a
        class="hover:text-link active:text-link "
        target="_blank"
        rel="noopener noreferer"
        href={link.href}
      >
        <span class="sr-only">{link.platform}</span>
        <Icon name={link.icon} class="w-5 h-5   " />
      </a>
    ))
  }
</div>
