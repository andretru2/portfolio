---
// import { Icon } from "astro-icon"

import type { SocialLink } from "@/types";

import { Icon } from "astro-icon/components";

export type Props = {
  links: SocialLink[];
  class?: string;
};

const { links, class: className } = Astro.props;
---

<div
  class:list={[
    " flex items-center justify-center ",
    className,
  ]}
>
  {
    links.map((link) => (
      <a
        class=" hover:glow   "
        target="_blank"
        rel="noopener noreferer"
        href={link.href}
      >
        <span class="sr-only">{link.platform}</span>
        <Icon name={link.icon} class="size-7" />
      </a>
    ))
  }
</div>
