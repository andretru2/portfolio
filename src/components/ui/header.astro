---
import Nav from "./nav.astro";
import NavMobile from "./nav-mobile-content.astro";
import { NavMobileButton } from "./nav-mobile-button";
import { Floating } from "./floating";
---

<header id="main-header" class="">
  <Floating
    client:load
    className="group fixed top-2 max-h-3xl bg-bgColor/60  card shadow-md rounded-full backdrop-blur-md   md:container mx-auto flex flex-row  items-center inset-x-5 md:inset-x-0   z-[5000]"
  >
    <Nav />
    <NavMobileButton client:load>
      <NavMobile />
    </NavMobileButton>
  </Floating>
</header>
