---
import Nav from "./nav.astro";
import NavMobile from "./nav-mobile-content.astro";
import { NavMobileButton } from "./nav-mobile-button";
import { Floating } from "./floating";
---

<header id="main-header" class="">
  <Floating
    client:load
    className="group border-4 w-full mt-s md:container md:mx-auto   fixed  rounded-xl top-0 max-h-5xl py-s px-m bg-bgColor/40  shadow-sm shadow-white/10 backdrop-blur-md   flex flex-row  items-center inset-x-0 md:inset-x-0   z-[5000]"
  >
    <Nav />
    <NavMobileButton client:visible>
      <NavMobile />
    </NavMobileButton>
  </Floating>
</header>
