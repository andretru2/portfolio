---
import Nav from "./nav.astro";
import NavMobile from "./nav-mobile-content.astro";
import { NavMobileButton } from "./nav-mobile-button";
import { Floating } from "./floating";
---

<header id="main-header" class="">
  <Floating
    client:load
    className="group fixed top-5  backdrop-blur-3xl rounded-full  bg-bgColor md:container mx-auto flex flex-row  items-center inset-x-5 md:inset-x-0  dark:shadow-white shadow-[0px_2px_3px_-1px_rgba(0,0,0,0.1),0px_1px_0px_0px_rgba(25,28,33,0.02),0px_0px_0px_1px_rgba(25,28,33,0.08)] z-[5000]"
  >
    <Nav />
    <NavMobileButton client:load>
      <NavMobile />
    </NavMobileButton>
  </Floating>
</header>
