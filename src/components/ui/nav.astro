---
import { navLinks, socialLinks } from "@/config/site";
import SocialLinks from "./social-links.astro";
import NavLink from "../ui/nav-link.astro";
import ThemeToggle from "./theme-toggle.astro";
import Logo from "./logo.astro";
---

<nav
  aria-label="Primary"
  class="justify-start align-middle container mx-auto h-full [&>*]:p-l
	flex-row gap-l text-center items-center max-h-3xl flex"
>
  <Logo />

  <ul
    id="menu-items"
    class="flex-row gap-xl hidden md:flex"
  >
    {
      navLinks.map((link) => (
        <li class="py-1">
          <NavLink class="" href={link.href}>
            {link.title}
          </NavLink>
        </li>
      ))
    }
  </ul>

  <div class="ml-auto md:[&>*]:gap-m hidden md:flex">
    <SocialLinks links={socialLinks} />
  </div>

  <div class="hidden md:flex">
    <ThemeToggle />
  </div>
</nav>
