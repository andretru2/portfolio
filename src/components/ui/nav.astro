---
import { navLinks, socialLinks } from "@/config/site";
import SocialLinks from "./social-links.astro";
import NavLink from "../ui/nav-link.astro";
import Logo from "./logo.astro";
import ContactMe from "./contact-me.astro";
---

<nav
  aria-label="Primary"
  class="grid grid-cols-12 gap-m w-full *:items-center *:justify-center"
>
  <Logo class="col-span-1 lg:flex justify-self-start" />

  <ul
    id="menu-items"
    class="col-span-7 flex-row gap-xl xl:gap-4xl hidden lg:flex"
  >
    {
      navLinks.map((link) => (
        <li class=" ">
          <NavLink href={link.href}>{link.title}</NavLink>
        </li>
      ))
    }
  </ul>

  <SocialLinks
    class="col-span-2 gap-xl hidden lg:flex"
    links={socialLinks}
  />

  <ContactMe
    className="col-span-2 hidden lg:flex justify-self-end"
  />

  <!-- <ThemeToggle
    class="col-span-1 hidden md:flex justify-self-end"
  /> -->
</nav>
