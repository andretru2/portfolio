---
import Background from "./background.astro";

const { backgroundType, class: className } = Astro.props;
---

<h6
  class:list={[
    "relative p-0 px-xs bg-accent text-sm tracking-wider text-black font-bold w-max",
    className,
  ]}
>
  <Background backgroundType={backgroundType} />
  <slot />
</h6>
